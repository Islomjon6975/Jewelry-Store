{% schema %}
  {
    "name": "Featured Collections",
    "settings": [
      {
        "id": "collect_title",
        "type": "text",
        "label": "CollectionTitle",
        "default": "jewelry that not only entices the eye but enchants the soul"
      }, {
        "id": "collect_img",
        "type": "image_picker",
        "label": "Image"
      }, {
        "type": "product_list",
        "id": "product_list",
        "label": "Products",
        "limit": 4
      }
    ]
  }
{% endschema %}