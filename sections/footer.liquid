{{ 'style.footer.css' | asset_url | stylesheet_tag }}

<div class="footer">
  <div class="footer__container">
    <div class="footer-col footer-col1">
      <ul class="footer-items">
        {% for link in section.settings.footer_left_links.links %}
          <li class="footer-item">
            <a href="{{ link.url }}" class="footer-link p">{{ link.title | escape  }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="footer-col footer-col2">
      <div class="footer__logo--wrapper">
        <img src="{{ section.settings.footer_logo | img_url: 'medium' }}" alt="footer-logo">
      </div>
      <div class="footer-copyright__container">
        <a class="footer-copyright__title p" href="#">{{ section.settings.footer_copyright_address }}</a>
        <a class="footer-copyright__title p" href="#">{{ section.settings.footer_copyright_policy }}</a>
        <a class="footer-copyright__title p" href="#">{{ section.settings.footer_copyright_year }}</a>
      </div>
    </div>
    <div class="footer-col footer-col3">
      <ul class="footer-items">
        {% for link in section.settings.footer_right_links.links %}
          <li class="footer-item">
            <a href="{{ link.url }}" class="footer-link p">{{ link.title | escape  }}</a>
          </li>
        {% endfor %}
        <li class="footer-item">
          <a href="{{ section.settings.footer_instagram_url}}" target="_blank">
            <img src="{{ section.settings.footer_instagram.src | img_url: 'medium' }}" alt="footer-ingstagram">
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "id": "footer_left_links",
        "type": "link_list",
        "label": "Footer Left Links"
      },
      {
        "id": "footer_right_links",
        "type": "link_list",
        "label": "Footer Right Links"
      },
      {
        "id": "footer_logo",
        "type": "image_picker",
        "label": "Footer Logo"
      },
      {
        "id": "footer_instagram",
        "type": "image_picker",
        "label": "Footer Icon"
      }, {
        "id": "footer_instagram_url",
        "type": "url",
        "label": "Footer Icon Url"
      }, {
        "id": "footer_copyright_address",
        "type": "text",
        "label": "Copyright Address",
        "default": "1234 Placeholder St. New York, NY"
      }, {
        "id": "footer_copyright_policy",
        "type": "text",
        "label": "Copyright Policy",
        "default": "Privacy Policy"
      }, {
        "id": "footer_copyright_year",
        "type": "text",
        "label": "Copyright Year",
        "default": "Â© 2022 D.Gregory"
      }
    ]
  }
{% endschema %}