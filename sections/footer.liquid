{{ 'style-footer.css' | asset_url | stylesheet_tag }}

<style>
  .footer__container {
    background-image: url("{{ section.settings.footer_icon | img_url: '449X180' }}");
  }
</style>

<div class="footer">
  <div class="footer__container">
    <div class="footer__form footer__col1">
      <h4 class="footer__title h5">{{ section.settings.footer_title1 }}
      </h4>
      <div class="footer__input__wrapper">
        <div class="news-letter__form">
          {% form 'customer' %}
            <input name="contact[tags]" type="hidden" value="newsletter"/>
            <input class="footer__input p" placeholder="Enter your email" type="email" name="contact[email]"/>
            <button type="submit" class="footer-arrow" name="commit">
              {% render 'icon-arrow-black' %}
            </button>
          {% endform %}
        </div>
      </div>
      <div class="footer__socials">
        {% render 'icon-facebook' %}
        {% render 'icon-instagram' %}
        {% render 'icon-email' %}
      </div>
    </div>

    <div class="footer__col2">
      <h4 class="footer__title h5">{{ section.settings.footer_title2 }}
      </h4>
      <ul class="footer__items">
        {% for link in section.settings.menu1.links %}
          <li class="footer__item">
            <a class="footer__link p" href="{{ link.url }}">{{link.title | escape }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="footer__col3">
      <h4 class="footer__title h5">{{ section.settings.footer_title3 }}
      </h4>
      <ul class="footer__items">
        {% for link in section.settings.menu2.links %}
          <li class="footer__item">
            <a class="footer__link p" href="{{ link.url }}">{{link.title | escape }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <p class="footer__copyright small-p">Â©{{section.settings.copyright }}
    . All Rights Reserved</p>
</div>

{% schema %}
  {
    "name": "Footer Image",
    "settings": [
      {
        "id": "footer_icon",
        "type": "image_picker",
        "label": "Footer Image"
      },
      {
        "id": "footer_title1",
        "type": "text",
        "label": "Footer Title 1",
        "default": "Newsletter"
      },
      {
        "id": "footer_title2",
        "type": "text",
        "label": "Footer Title 2",
        "default": "Again faster"
      },
      {
        "id": "footer_title3",
        "type": "text",
        "label": "Footer Title 3",
        "default": "Get Help"
      }, {
        "type": "link_list",
        "id": "menu1",
        "label": "Menu 1"
      }, {
        "type": "link_list",
        "id": "menu2",
        "label": "Menu 2"
      }, {
        "id": "copyright",
        "type": "text",
        "label": "Copyright",
        "default": "2020 Again Faster"
      }
    ]
  }
{% endschema %}
