{{ 'style.card.css' | asset_url | stylesheet_tag }}

<style>
  .card {
    background-image: url("{{ 'gumbaz.svg' | asset_url }}");
  }
</style>

<div class="card">
  <div class="card__image-wrapper">
    <img src="{{ product.featured_image.src | img_url: 'medium'}}" alt="{{ product.handle }}" class="card__img">
  </div>
  <div class="card__details">
    <h3 class="card__title">{{ product.title }}</h3>
    <h4 class="card__price">{{ product.price | money }}</h4>
    <h4 class="card__subtitle">{{ product.tags }}</h4>
  </div>

</div>


<script>
  formatter = new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    maximumFractionDigits: 2
  });
</script>