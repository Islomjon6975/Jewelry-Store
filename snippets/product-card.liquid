
<a href="{{ product_card.url }}" class="product-card {{type}}">
    <div class="badges__wrapper">
        {% for tag in product_card.tags %}
            {% if tag == 'Sale' %}
                {% render 'badge', title: tag, type: 'sale' %}
            {% endif %}
            {% if tag == 'Free Shipping' %}
                {% render 'badge', title: tag, type: 'secondary' %}
            {% endif %}
            {% if tag == 'Best Seller' %}
                {% render 'badge', title: tag, type: 'primary' %}
            {% endif %}
            {% if tag == 'Pre-Oder' %}
                {% render 'badge', title: tag, type: 'default' %}
            {% endif %}
        {% endfor %}

    </div>
    <div class="product-card__image-wrapper">
        <img src="{{product_card.featured_image.src | img_url: 'large' }}" alt="" class="product-card__image">
    </div>
    <div class="product-card__details">
        <p
         class="product-card__title h5">{{ product_card.title }}</phref=>
        <div class="product-card__star--wrapper">
            {%- comment -%} {% render 'icon-star' %}
            {% render 'icon-star' %}
            {% render 'icon-star' %}
            {% render 'icon-star' %}
            {% render 'icon-star' %} {%- endcomment -%}
            <div class="yotpo-widget-instance" data-yotpo-instance-id="250088" data-yotpo-product-id="{{product.id}}"></div>
        </div>
        {% for tag in product_card.tags %}
            <p class="product-card__price h5 {% if tag == 'Sale'  %} linethrough {% endif %}">{{product_card.price | money}} </p>
        {% endfor %}

    </div>
</a>