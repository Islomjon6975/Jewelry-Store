<div href="#" class="product-likes-card swiper-slide">
  <div class="badges__wrapper">
    {% for tag in product_card.tags %}
      {% if tag == 'Sale' %}
        {% render 'badge', title: tag, type: 'sale' %}
      {% endif %}
      {% if tag == '  ' %}
        {% render 'badge', title: tag, type: 'secondary' %}
      {% endif %}
      {% if tag == 'Best Seller' %}
        {% render 'badge', title: tag, type: 'primary' %}
      {% endif %}
      {% if tag == 'Pre-Oder' %}
        {% render 'badge', title: tag, type: 'default' %}
      {% endif %}
    {% endfor %}

  </div>
  <div class="product-likes-card__image-wrapper">
    <img src="{{image.src | img_url: 'large' }}" alt="" class="product-likes-card__image">
  </div>
  <div class="product-likes-card__details">
    <p class="product-likes-card__title h5">{{title}}</phref=>
    <div class="product-likes-card__star--wrapper">
      {% render 'icon-star' %}
      {% render 'icon-star' %}
      {% render 'icon-star' %}
      {% render 'icon-star' %}
      {% render 'icon-star' %}
    </div>
    {% for tag in product_card.tags %}
      <p class="product-likes-card__price pricee h5 {% if tag == 'Sale'  %} linethrough {% endif %}">{{ price }}</p>
    {% endfor %}

  </div>
</div>

<script>
  formatter = new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    maximumFractionDigits: 2
  });


  const price = document.querySelector('.product-likes-card__price')
  const pricee = document.querySelector('.pricee')
  pricee.innerText = (formatter.format(+ price.innerText / 100))
</script>